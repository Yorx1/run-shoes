<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".FavoritesActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/favoritesToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorGo"
        app:title="Favoritos"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/baseline_back"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoritesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/favoritesToolbar"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nada para mostrar, date una vuelta por nuestra secciÃ³n de productos para agregar productos a tus favoritos."
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textSize="16sp"
        android:padding="16dp" />

</RelativeLayout>
